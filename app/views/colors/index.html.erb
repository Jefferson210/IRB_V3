<%= render 'optionsMenu', model: "Color" %>
<%=
    grid(@colorGrid) do |color|

        color.column name: 'Color Name', attribute: 'colorName'        
        color.column do |edit|
            link_to("",edit_color_path(edit.id),:class => "btn btn-default glyphicon glyphicon-pencil")
        end    

        color.column do |show|
            link_to('',color_path(show.id),:class => "btn btn-default glyphicon glyphicon-eye-open")            
        end

        color.column do |delete|
            link_to('', color_path(delete.id), data: {confirm: 'Are you sure?'}, method: :delete,:class => 'btn btn-default glyphicon glyphicon-trash')
        end
    end
-%>
