<h2 class="alert alert-info">Results</h2>
<!--resultadod por codigo(codeCross)-->
<table class="table">
    <thead>
        <tr>
            <th>CodeCross</th>
            <th>Total</th>
            <th>Percentaje</th>
        </tr>
    </thead>

    <tbody>
        <% sumaCodeCross.each do |item| %>
        <tr>
            <td><%= item[0] %></td>
            <td><%= item[1] %></td>
            <td>
                <%percentajeSeedscodeCross.each do |seed|%>
                <%if seed[0] == item[0]%>
                <%= (item[1] * 100) / seed[1] %>
                <%end%>
                <%end%>%                
            </td>
        </tr>
        <% end %>
    </tbody>


</table>

<!--resultados por codigo y numero de repeticion(CodeCrossNumRepeat)-->
<table class="table">
    <thead>
        <tr>
            <th>CodeCrossNumRepeat</th>
            <th>Total</th>
            <th>Percentaje</th>
        </tr>
    </thead>

    <tbody>
        <% sumaCodeCrossNumRepeat.each do |item| %>
        <tr>
            <td><%= item[0] %></td>
            <td><%= item[1] %></td>
            <td>
                <% percentajeSeedsNumRepeat.each do |seed| %>
                <%if seed[0] == item[0]%>
                <%= (item[1] * 100) / seed[1]  %>                    
                <%end%>
                <%end%>%
            </td>

        </tr>
        <% end %>
    </tbody>


</table>
