<%= render 'optionsMenu', model: "User" %>
<%=
    grid(@userGrid) do |userProfile|

        userProfile.column name: 'Username', attribute: 'username'
        userProfile.column name: 'Email', attribute: 'email'    
        userProfile.column name:"Role", attribute: 'role' 

        userProfile.column do |edit|
            link_to('', edit_user_path(edit.id),:class => "btn btn-default glyphicon glyphicon-pencil")
        end    

        userProfile.column do |delete|
            link_to('', user_path(delete.id), data: {confirm: 'Are you sure?'}, method: :delete,:class => 'btn btn-default glyphicon glyphicon-trash')
        end
    end
-%>