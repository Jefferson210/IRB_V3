<%= render 'optionsMenu', model: "SpekSelection" %>
<%= render 'modalBarCode', model: "SpekSelection" %>
<div class="panel panel-primary filterable">
    <div class="panel-heading">
        <h2 class="panel-title">SPEK Selections</h2>
    </div>
    <br>
    <div class="table-responsive">
        <table class="table table-striped filterTable">
            <button type="button" class="btn btn-primary clearFilters" aria-label="Left Align">
                <span class="glyphicon glyphicon-refresh" aria-hidden="true"></span> Reset Filters
            </button>
            <br>
            <br>
            <thead>
                <tr class="filters">
                    <th>Code</th>
                    <th>Location </th>
                    <th>Denomination</th>
                    <th>Picture</th>
                    <th>Year</th>
                    <th>Status</th>
                    <th>Color</th>
                    <th>Head Size</th>                    
                    <th>Production</th>                    
                    <th class="buttonAction"></th>
                    <th class="buttonAction"></th>
                    <th class="buttonAction"></th>
                </tr>
            </thead>
            <tbody id="spekSelectionBody">
                <% @spek_selections.each do |spekSelection| %>
                <%= render "spek_selection", spekSelection: spekSelection %>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
<%= render 'dialog' %>

