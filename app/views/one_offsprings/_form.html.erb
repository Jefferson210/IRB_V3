<div class="container">
    <div class="row">
        <div class="col-offset-1 col-md-10">
            <%= form_for(@one_offspring,:html=>{:class=>"form-horizontal"}) do |f| %>
            <% if @one_offspring.errors.any? %>
            <div id="error_explanation">
                <h2><%= pluralize(@one_offspring.errors.count, "error") %> prohibited this one_offspring from being saved:</h2>

                <ul>
                    <% @one_offspring.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
            <% end %>

            <div class="form-group">
                <%= f.label :germination_id,"Germination (codeCross-numRepeat)",:class=>"col-md-3" %>
                <div class="col-md-3">
                    <%= f.collection_select(:germination_id,Germination.group(:codeCross),:id,:codeCross,{:prompt => "Select"},{:class => "form-control"})%>                    
                </div>
            </div>

            <div class="form-group">
                <%= f.label :individual, :class=>"col-md-3" %>
                <div class="col-md-3">
                    <%= f.number_field :individual ,:class=>"form-control"%>
                </div>
            </div>

            <div class="form-group">
                <%= f.label :color_id, :class=>"col-md-3" %>
                <div class="col-md-3">
                    <%= f.collection_select(:color_id,Color.all,:id,:colorName,{:prompt => "Select Color"},{:class => "form-control"})%> 
                </div>
            </div>

            <div class="form-group">
                <%= f.label :status, :class=>"col-md-3" %>
                <div class="col-md-3">
                    <%= f.select(:status, options_for_select([['Keep','keep'],['Out','out']], :selected => f.object.status), {:prompt => "Select"}, {:class => 'form-control'})  %>
                </div>
            </div>

            <div class="form-group">
                <%= f.label :headSize, :class=>"col-md-3" %>
                <div class="col-md-3">
                    <%= f.text_field :headSize,:class=>"form-control" %>
                </div>
            </div>

            <div class="form-group">
                <%= f.label :flowering, :class=>"col-md-3" %>
                <div class="col-md-3">
                    <%= f.number_field :flowering ,:class=>"form-control"%>
                </div>
            </div>

            <div class="form-group">
                <%= f.label :numPetals, :class=>"col-md-3" %>
                <div class="col-md-3">
                    <%= f.number_field :numPetals ,:class=>"form-control"%>
                </div>
            </div>

            <div class="form-group">
                <%= f.label :form, :class=>"col-md-3" %>
                <div class="col-md-3">
                    <%= f.select(:form, options_for_select([['Good','good'],['Bad','bad']], :selected => f.object.form), {:prompt => "Select"}, {:class => 'form-control'})  %>
                </div>
            </div>

            <div class="form-group">
                <div class="actions">
                    <%= f.submit class: "btn btn-primary active" %>
                </div>
            </div>
            <% end %>
        </div>
    </div>
</div>