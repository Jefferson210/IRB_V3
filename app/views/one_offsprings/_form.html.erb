<%= form_for(@one_offspring,remote: true, :html=>{ multipart: true ,:role => "form"}) do |f| %>              
<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <%= f.label :germination_id,"Germination (codeCross-numRepeat)" %>
            <%= f.collection_select(:germination_id,Germination.group(:codeCross),:id,:codeCross,{:prompt => "Select"},{:class => "form-control first_input"})%>
        </div>

        <div class="form-group">
            <%= f.label :individual %>
            <%= f.number_field :individual ,:class=>"form-control",min: 1 %>
        </div>

        <div class="form-group">
            <%= f.label :color_id %>
            <%= f.collection_select(:color_id,Color.all,:id,:colorName,{:prompt => "Select Color"},{:class => "form-control"})%>
        </div>

        <div class="form-group">
            <%= f.label :status %>
            <%= f.select(:status, options_for_select([['Keep','keep'],['Out','out']], :selected => f.object.status), {:prompt => "Select"}, {:class => 'form-control'})  %>
        </div>

        <div class="form-group">
            <%= f.label :headSize %>
            <%= f.text_field :headSize,:class=>"form-control" %>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group">
            <%= f.label :flowering %>
            <%= f.number_field :flowering ,:class=>"form-control",min: 1 %>
        </div>

        <div class="form-group">
            <%= f.label :numPetals %>
            <%= f.number_field :numPetals ,:class=>"form-control",min: 1 %>
        </div>

        <div class="form-group">
            <%= f.label :form %>
            <%= f.select(:form, options_for_select([['Good','good'],['Bad','bad']], :selected => f.object.form), {:prompt => "Select"}, {:class => 'form-control'})  %>
        </div>

        <div class="form-group">
            <%= f.label "Main Picture" %>
            <%= f.collection_select(:PictureId,OneOffspringPicture.where(one_offspring_id: @one_offspring.id),:id,:picture_file_name,{:prompt => "Select Image", :include_blank => "None"},{:class => "form-control"})%>
        </div>

        <div class="form-group">
            <%= f.label :pictures %>
            <%= file_field_tag "images[]", type: :file, multiple: true %>
        </div>
    </div>

    <div class="form-group">
        <%= f.submit class: "btn btn-primary active" %>
    </div>
</div>
<% end %>