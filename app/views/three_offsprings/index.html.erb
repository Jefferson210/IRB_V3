<%= render 'optionsMenu', model: "ThreeOffspring" %>
<div class="panel panel-primary filterable">
    <div class="panel-heading">
        <h2 class="panel-title">Three Offsprings</h2>
    </div>
    <br>
    <div class="table-responsive">
        <table class="table table-striped filterTable">
            <button type="button" class="btn btn-primary clearFilters" aria-label="Left Align">
                <span class="glyphicon glyphicon-refresh" aria-hidden="true"></span> Reset Filters
            </button>
            <br>
            <br>
            <thead>
                <tr class="filters">
                    <th>CodeCross-Individual</th>
                    <th>Image</th>                    
                    <th>Color Name</th>
                    <th>Status</th>
                    <th>HeadSize</th>
                    <th>Flowering</th>
                    <th># Petals</th>
                    <th>Form</th>                    
                    <th class="buttonAction"></th>
                    <th class="buttonAction"></th>
                    <th class="buttonAction"></th>
                </tr>
            </thead>
            <tbody id="threeOffspringsBody">
                <% @three_offsprings.each do |three_offsprings| %>
                <%= render "three_offsprings", three_offsprings: three_offsprings %>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
