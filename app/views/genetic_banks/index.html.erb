<%= render 'optionsMenu', model: "GeneticBank" %>
<div class="text-center">
    <div class="modal fade" id="geneticBank-modal-modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span><span
                            class="sr-only">Close</span></button>
                    <h4 class="modal-title">Create Bar Codes</h4>
                </div>
                <div class="modal-body">
                    <%= form_tag(geneticBankBarCodes_path(format: "pdf"), method: :get) do %>
                    <%= select_tag "geneticBank", options_from_collection_for_select(GeneticBank.all, "id", "code"),multiple: true %>
                    <%= submit_tag "Create Bar Codes", class: "btn btn-success"%>
                    <%end%>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="panel panel-primary filterable">
    <div class="panel-heading">
        <h2 class="panel-title">Genetic Bank</h2>
    </div>
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Code</th>
                    <th>Location</th>
                    <th>Trademark</th>
                    <th>Denomination</th>
                    <th>Color</th>
                    <th>Year</th>
                    <th>Breeder</th>
                    <th>Status</th>
                    <th>Scent</th>
                    <th>HeadSize</th>
                    <th>NumPetals</th>
                    <th>SteamLenght</th>
                    <th>Opening</th>
                </tr>
                <tr class="filters">
                    <th><input type="text" class="form-control"></th>
                    <th><input type="text" class="form-control"></th>
                    <th><input type="text" class="form-control"></th>
                    <th><input type="text" class="form-control"></th>
                    <th><input type="text" class="form-control"></th>
                    <th><input type="text" class="form-control"></th>
                    <th><input type="text" class="form-control"></th>
                    <th><input type="text" class="form-control"></th>
                    <th><input type="text" class="form-control"></th>
                    <th><input type="text" class="form-control"></th>
                    <th><input type="text" class="form-control"></th>
                    <th><input type="text" class="form-control"></th>
                    <th><input type="text" class="form-control"></th>
                    <th>
                        <span class="glyphicon glyphicon-filter">Filters</span>
                    </th>
                    <th>
                        <button id="clearFilters" class="btn"><i class="glyphicon glyphicon-refresh" title="Clean filters"></i></button>
                    </th>
                </tr>
            </thead>
            <tbody>
                <% @genetic_banks.each do |geneticBank| %>
                <%= render "row", geneticBank: geneticBank %>
                <% end %>
            </tbody>
        </table>
    </div>
</div>