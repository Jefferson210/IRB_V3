<%= form_for(@irb_selection, remote: true, :html => { multipart: true , :role => "form" }) do |f| %>
<div class="container">
    <div class="col-md-6">
        <div class="form-group">
            <%= f.label :three_offspring_id,"Three offspring (codeCros-individual)"%>
            <div class="col-md-3">
                <%= f.collection_select(:three_offspring_id,ThreeOffspring .where(status: 'keep'),:id,:codeCross_name,{:prompt => "Select"},{:class => "form-control first_input", :id => "three_offspring_id"})%>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :code %>
            <%= f.text_field :code,:class=>"form-control" %>
        </div>

        <div class="form-group">
            <%= f.label :color %>
            <%= f.text_field :color ,:class =>"form-control", :id => "colorId", :readonly => true %>
        </div>

        <div class="form-group">
            <%= f.label :location %>
            <%= f.select(:location, options_for_select([['S.Tabacundo','S.Tabacundo'],['S.Lazo','S.Lazo'],['S.Cayambe','S.Cayambe'],['Kenia','kenia']], :selected => f.object.location), {:prompt => "Select"}, {:class => 'form-control'})  %>
        </div>

        <div class="form-group">
            <%= f.label :trademark %>
            <%= f.text_field :trademark,:class=>"form-control" %>
        </div>

        <div class="form-group">
            <%= f.label :denomination %>
            <%= f.text_field :denomination,:class=>"form-control"  %>
        </div>

        <div class="form-group">
            <%= f.label :year %>
            <%= f.select :year, (Time.zone.now.year - 16)..(Time.zone.now.year + 10), {:prompt => "Select"},{:class =>"form-control"} %>
        </div>

        <div class="form-group">
            <%= f.label :status %>
            <%= f.select(:status, options_for_select([['Keep','keep'],['Out','out']], :selected => f.object.status), {:prompt => "Select"}, {:class => 'form-control'})  %>
        </div>

        <div class="form-group">
            <%= f.label :numPlants %>
            <%= f.number_field :numPlants,:class=>"form-control"  %>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group">
            <%= f.label :scent %>
            <%= f.select(:scent, options_for_select([['Not','not'],['Yes','yes']], :selected => f.object.scent), {:prompt => "Select"}, {:class => 'form-control'})  %>
        </div>

        <div class="form-group">
            <%= f.label :headSize %>
            <%= f.select(:headSize, options_for_select([['2','2'],['2.5','2.5'],['3','3'],['3.5','3.5'],['4','4'],['4.5','4.5'],['5','5'],['5.5','5.5'],['6','6'],['6.5','6.5'],['7','7']], :selected => f.object.headSize), {:prompt => "Select"}, {:class => 'form-control'})  %>
        </div>

        <div class="form-group">
            <%= f.label :numPetals %>
            <%= f.number_field :numPetals,:class=>"form-control"  %>
        </div>

        <div class="form-group">
            <%= f.label :steamLenght %>
            <%= f.text_field :steamLenght ,:class=>"form-control" %>
        </div>

        <div class="form-group">
            <%= f.label :production %>
            <%= f.text_field :production ,:class=>"form-control" %>
        </div>

        <div class="form-group">
            <%= f.label :opening %>
            <%= f.text_field :opening ,:class=>"form-control" %>
        </div>

        <div class="form-group">
            <%= f.label :abnormality %>
            <%= f.text_area :abnormality,:class=>"form-control"  %>
        </div>

        <div class="form-group">
            <%= f.label :remarks %>
            <%= f.text_area :remarks ,:class=>"form-control" %>
        </div>

        <div class="form-group">
            <%= f.label :irb_selections_picture_id %>
            <%= f.collection_select(:irb_selections_picture_id,IrbSelectionsPicture.where(irb_selection_id: @irb_selection.id),:id,:picture_file_name,{:prompt => "Select Image", :include_blank => "None"},{:class => "form-control"})%>
        </div>
    </div>
    <div class="form-group">
        <%= f.submit class: "btn btn-primary active btn-block"%>
    </div>
</div>
<% end %>