<div class="container">
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= form_for @company, html: {multipart: true} do |f| %>
        <% if @company.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@company.errors.count, "error") %> prohibited this company from being saved:</h2>

          <ul>
            <% @company.errors.full_messages.each do |message| %>
            <li>
              <%= message %>
            </li>
            <% end %>
          </ul>
        </div>
        <% end %>
        <form>
          <div class="form-row">
            <div class="form-group col-md-6">
              <%= f.label "Company Name", :class=>"control-label" %>
              <%= f.text_field :name,:class=>"form-control" %>
            </div>
            <div class="form-group col-md-6">
              <%= f.label :phone, :class=>"control-label" %>
              <%= f.text_field :phone,:class=>"form-control" %>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-6">
              <%= f.label :cellPhone, :class=>"control-label" %>
              <%= f.text_field :cellPhone,:class=>"form-control" %>
            </div>
            <div class="form-group col-md-6">
              <%= f.label :email, :class=>"control-label" %>
              <%= f.email_field :email,:class=>"form-control" %>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-4">
              <%= f.label "Facebook", :class=>"control-label" %>
              <%= f.text_field :facebookContact,:class=>"form-control" %>
            </div>
            <div class="form-group col-md-4">
              <%= f.label "Skype", :class=>"control-label" %>
              <%= f.text_field :skypeContact,:class=>"form-control" %>
            </div>
            <div class="form-group col-md-4">
              <%= f.label "Web", :class=>"control-label" %>
              <%= f.text_field :webContact ,:class=>"form-control"%>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :description, :class=>"control-label" %>
            <%= f.text_area :description,:class=>"form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :address, :class=>"control-label" %>
            <%= f.text_area :address,:class=>"form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :mission, :class=>"col-md-2 control-label" %>
            <%= f.text_area :mission,:class=>"form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :vision, :class=>"col-md-2 control-label" %>
            <%= f.text_area :vision,:class=>"form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "People Contact", :class=>"control-label" %>
            <%= f.text_area :peopleContact,:class=>"form-control" %>
          </div>

          <div class="form-group">
            <%= f.label "Choose Image", :class=>"control-label" %>
            <%= f.file_field :image,:class=>"form-control" %>
          </div>
          <% if @company.image_file_name != nil %>
          <div class="form-group">
            <%= image_tag @company.image.url(:medium) %>
          </div>
          <div class="form-group">
            <div class="form-check">
              <%= f.label "Delete Image?", :class=>"control-label" %>
              <%= f.check_box :removeImage,:class=>"form-control" %>
            </div>
          </div>
          <% end %>

          <div class="form-group col-md-2">
            <div class="actions">
              <%= f.submit class: "btn btn-primary active" %>
            </div>
          </div>
        </form>
        <% end %>
      </div>
    </div>
  </div>
</div>