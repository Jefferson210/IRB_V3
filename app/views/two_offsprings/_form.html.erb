<%= form_for(@two_offspring,remote: true, :html=>{ multipart: true ,:role => "form"}) do |f| %>
<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <%= f.label :one_offspring_id,"One offspring (codeCros-individual)" %>
            <%= f.collection_select(:one_offspring_id,OneOffspring.where(status: 'keep'),:id,:codeCross_name,{:prompt => "Select"},{:class => "form-control first_input", :id => "one_offspring_id"})%>
        </div>

        <div class="form-group">
            <%= f.label :color %>
            <%= f.text_field :color,:class=>"form-control", :id => "colorId", :readonly => true %>
        </div>

        <div class="form-group">
            <%= f.label :status %>
            <%= f.select(:status, options_for_select([['Keep','keep'],['Out','out']], :selected => f.object.status), {:prompt => "Select"}, {:class => 'form-control'})  %>
        </div>

        <div class="form-group">
            <%= f.label "headSize(cm)" %>
            <%= f.number_field :headSize,:class=>"form-control", min: 1%>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <%= f.label :flowering %>
            <%= f.number_field :flowering ,:class=>"form-control",min: 1%>
        </div>

        <div class="form-group">
            <%= f.label :numPetals %>
            <%= f.number_field :numPetals ,:class=>"form-control",min: 1%>
        </div>

        <div class="form-group">
            <%= f.label :form %>
            <%= f.select(:form, options_for_select([['Good','good'],['Bad','bad']], :selected => f.object.form), {:prompt => "Select"}, {:class => 'form-control'})  %>
        </div>

        <div class="form-group">
            <%= f.label "Main Picture"%>
            <%= f.collection_select(:PictureId,TwoOffspringPicture.where(two_offspring_id: @two_offspring.id),:id,:picture_file_name,{:prompt => "Select Image", :include_blank => "None"},{:class => "form-control"})%>
        </div>
        <div class="form-group">
            <%= f.label :pictures %>
            <%= file_field_tag "images[]", type: :file, multiple: true %>
        </div>
    </div>
    <div class="form-group">
        <%= f.submit class: "btn btn-primary active btn-block" %>
    </div>
</div>
<% end %>